<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A7564210"
    android:backgroundTint="#8C785C"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/gerar"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:onClick="gerar"
            android:text="Gerador"
            android:translationX="570px"
            android:translationY="1000px" />

        <Button
            android:id="@+id/Loteria"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:onClick="Loteria"
            android:text="Loteria"
            android:translationX="50px"
            android:translationY="1000px" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>